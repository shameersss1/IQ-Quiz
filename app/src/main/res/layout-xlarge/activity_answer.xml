<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D9191E"
        android:id="@+id/toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Answer" />

    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/drawerLayout"
        >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
  android:background="#F5F5D6"

    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="இன்றைய கேள்விக்கான பதில் (A/B/C/D)\n"
        android:id="@+id/textView3" />

    <RadioGroup
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:orientation="horizontal"
    android:id="@+id/radio">

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        android:buttonTint="#000"
        android:textSize="20dp"

        android:id="@+id/radioButton"
        android:layout_marginTop="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
         />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:layout_marginTop="8dp"
        android:buttonTint="#000"

        android:id="@+id/radioButton2"
        android:layout_below="@+id/radioButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:layout_marginTop="8dp"
        android:buttonTint="#000"
        android:layout_marginLeft="20dp"

        android:textSize="20dp"

        android:id="@+id/radioButton3"
        android:layout_below="@+id/radioButton2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D"
        android:layout_marginTop="8dp"
        android:buttonTint="#000"
        android:layout_marginLeft="20dp"

        android:textSize="20dp"

        android:id="@+id/radioButton4"
        android:layout_below="@+id/radioButton3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false" />

</RadioGroup>





    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=" இன்று IQ வில் ஓதி பொருள் படிக்க கொடுக்கப்பட்டுள்ள வசனங்களை ஓதி பொருள் படித்து விட்டேன்"
        android:id="@+id/textView2"
        android:layout_marginTop="35dp"
        android:textColor="#000"
        android:layout_below="@+id/radio"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
<RadioGroup
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:id="@+id/radio1"
    android:orientation="horizontal"
    android:layout_marginTop="12dp"

    >

    <RadioButton
 android:layout_width="wrap_content"
 android:layout_height="wrap_content"
   android:text="NO "
        android:textSize="18dp"

        android:buttonTint="#000"
        android:id="@+id/radioButton6"
    android:checked="false"
        android:layout_below="@+id/radioButton5"
        android:layout_centerHorizontal="true" />ue

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YES "
        android:textSize="18dp"
        android:layout_marginLeft="25dp"
        android:checked="True"

        android:buttonTint="#000"
        android:id="@+id/radioButton5"
        android:layout_below="@+id/button7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RadioGroup>






    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Button"
        android:textColor="#FFFFFF"
        android:layout_marginTop="50dp"
        android:background="#CC3C3C"
        android:onClick="invokeLogin"
        android:layout_gravity="center_horizontal"
        android:text="POST" />


</LinearLayout>
        <android.support.design.widget.NavigationView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:id="@+id/shitstuff"
            app:itemTextColor="@color/black"
            app:menu="@menu/drawermenu"
            android:layout_marginTop="-24dp"
            />

        </android.support.v4.widget.DrawerLayout>
    </LinearLayout>