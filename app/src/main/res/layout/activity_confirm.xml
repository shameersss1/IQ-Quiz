<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.user.iq.Register"
    android:background="#F5F5D6"
    >


    <EditText
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:inputType="textPersonName"
        android:hint="   Name"
        android:background="@drawable/etfield"
        android:ems="10"
        android:id="@+id/editText3"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:inputType="phone"
        android:background="@drawable/etfield"
        android:hint="  Phone Number"
        android:ems="10"
        android:id="@+id/editText4"
        android:layout_below="@+id/editText3"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SIgnUP"

        android:onClick="invokeLogin"
        android:textColor="#FFFFFF"
        android:background="@drawable/buttonshape"
        android:id="@+id/button3"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/editText4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="மீண்டும் உங்கள் மொபைல் எண்ணை பதிவு செய்யவும்,பரிசுகள் வந்தால் இந்த எண்ணை வைத்தே உங்களை நாங்கள் அறிந்து கொள்வோம்."
         android:textSize="20dp"
        android:id="@+id/textView9"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
