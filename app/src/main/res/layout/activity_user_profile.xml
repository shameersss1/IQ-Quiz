<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
   android:orientation="vertical"
    android:background="#F5F5D6"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Registered Number : "
        android:id="@+id/textView11" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:inputType="textPersonName"
        android:hint="   Name"
        android:background="@drawable/etfield"
        android:ems="10"
        android:id="@+id/name"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:inputType="text"
        android:background="@drawable/etfield"
        android:hint="  Current Place"
        android:ems="10"
        android:id="@+id/place"
        android:layout_below="@+id/editText3"
        />
    />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:inputType="date"
        android:background="@drawable/etfield"
        android:hint="  Date Of Birth"
        android:ems="10"
        android:id="@+id/dob"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:inputType="textEmailAddress"
        android:hint="   Email-ID"
        android:background="@drawable/etfield"
        android:ems="10"
        android:id="@+id/email"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="  Gender"
        android:textSize="25dp"
        android:id="@+id/textView33"
        android:layout_below="@+id/radio"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radio2"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"

        >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MALE "
            android:textSize="18dp"

            android:id="@+id/radioButton66"
            android:checked="false"
            android:layout_below="@+id/radioButton5"
            android:layout_centerHorizontal="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FEMALE "
            android:textSize="18dp"
            android:layout_marginLeft="25dp"

            android:id="@+id/radioButton55"
            android:layout_below="@+id/button7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RadioGroup>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UPDATE"
        android:onClick="invokeLogin"
        android:textColor="#FFFFFF"
        android:background="@drawable/buttonshape"
        android:id="@+id/button3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/editText4" />



</LinearLayout>